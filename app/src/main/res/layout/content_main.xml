<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <ImageView
        android:id="@+id/btlist"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btproceduretest"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        app:srcCompat="@drawable/list" />

    <ImageView
        android:id="@+id/bttestbctri"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/test"
        android:layout_alignTop="@+id/btsearch"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <ImageView
        android:id="@+id/btsearch"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="61dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="67dp"
        app:srcCompat="@drawable/search" />

    <ImageView
        android:id="@+id/btproceduretest"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/research"
        android:layout_marginTop="96dp"
        android:layout_below="@+id/btsearch"
        android:layout_alignLeft="@+id/btsearch"
        android:layout_alignStart="@+id/btsearch" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Procedure of Biochemical Test"
        android:textColor="@color/colorPrimaryDark"
        android:layout_above="@+id/btlist"
        android:layout_alignLeft="@+id/btlist"
        android:layout_alignStart="@+id/btlist"
        android:layout_alignRight="@+id/btlist"
        android:layout_alignEnd="@+id/btlist" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btlist"
        android:layout_alignEnd="@+id/btsearch"
        android:layout_alignLeft="@+id/btproceduretest"
        android:layout_alignRight="@+id/btsearch"
        android:layout_alignStart="@+id/btproceduretest"
        android:gravity="center"
        android:text="Procedure of Biochemical Test"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/bttestbctri"
        android:layout_alignStart="@+id/bttestbctri"
        android:gravity="center"
        android:text="Biochemical Test"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignRight="@+id/bttestbctri"
        android:layout_alignEnd="@+id/bttestbctri" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:gravity="center"
        android:text="Bacteria Searching"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btsearch"
        android:layout_alignEnd="@+id/btsearch"
        android:layout_alignLeft="@+id/btsearch"
        android:layout_alignStart="@+id/btsearch" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.SearchActivity">

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dip"
        android:padding="3dip">

        <ImageView
            android:id="@+id/list_image"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:src="@drawable/icon" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/txtAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView19"
            android:text="TextView"
            android:textColor="@color/cardview_dark_background" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bacteria Name :"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColor="#FF008080" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtName"
            android:text="Category &amp; Characters :"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColor="#FF008080" />

        <TextView
            android:id="@+id/txtDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtAge"
            android:layout_marginTop="10dp"
            android:text="List of biochemical test that are suitable for this bacteria :"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColor="#FF008080" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/txtId"
            android:layout_toRightOf="@+id/txtId"
            android:text="ten"
            android:textColor="@color/cardview_dark_background" />

        <TextView
            android:id="@+id/txtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/cardview_dark_background"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtDetail"
            android:layout_weight="90"
            android:text="email@instinctcoder.com"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/cardview_dark_background" />
    </RelativeLayout>

</RelativeLayout>
